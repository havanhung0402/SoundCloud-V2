<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.framgia.music_31">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:fullBackupContent="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screens.main.MainActivity"/>
        <activity android:name=".screens.song.SongActivity" />
        <activity
            android:name=".screens.player.PlayerMusicActivity"
            android:theme="@style/AppTheme" />

        <service
            android:name=".service.MusicService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".service.DownloadTrackService"
            android:exported="false"/>

        <activity
            android:name=".screens.splash.SplashActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="soundcloud.com"
                    android:pathPattern="/soundcloud" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.playlist.PlaylistActivity"/>
    </application>

</manifest>