<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#424242">
    <ImageView
        android:id="@+id/imageView_notifi"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="16dp"
        />
    <TextView
        android:id="@+id/text_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView_notifi"
        android:layout_marginTop="5dp"
        android:text="Tu lau nuoc mat"
        android:textColor="@color/text_white"/>
    <ImageView
        android:id="@+id/image_clear_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_clear_white_24dp"
        />
    <TextView
        android:id="@+id/text_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView_notifi"
        android:layout_below="@+id/text_song"
        android:text="Mr.Siro"
        android:textColor="@color/text_gray"/>
    <ProgressBar
        android:id="@+id/progress_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView_notifi"
        android:layout_below="@+id/text_artist"
        android:layout_marginRight="16dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_toEndOf="@id/imageView_notifi"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/progress_notify">
        <ImageView
            android:id="@+id/button_previous_notify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_skip_previous_white_24dp"
            />
        <ImageView
            android:id="@+id/button_status_notify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_pause_white_24dp"
            />
        <ImageView
            android:id="@+id/button_next_notify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_next_white_24dp"
            />
    </LinearLayout>
</RelativeLayout>